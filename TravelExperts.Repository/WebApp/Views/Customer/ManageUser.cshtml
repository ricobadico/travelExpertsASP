@model TravelExperts.Repository.Domain.Customer

<div class="container box-Main rounded-nice bg-Main" style="padding-top:1em">
    <h3 class="text-center text-light-Main" style="margin:1em auto;">Login Information</h3>
    <form asp-action="ManageUser" id="editForm">
        <div class="row justify-content-center">
            <div class="form-group col-md-4">
                <label class="control-label">New User</label>
                <input asp-for="UserLogin" class="form-control" id="username" />
                <span asp-validation-for="UserLogin" class="text-light"></span>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label">New Password:</label>
                <input asp-for="UserPass" class="form-control" />
                <span asp-validation-for="UserPass" class="text-light"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-light btn-lg" />
        </div>
    </form>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/CustomerRegistration.js"></script>
}