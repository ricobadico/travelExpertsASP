<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Experts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Adding google fonts: Josefin Sans-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/65343a6b45.js" crossorigin="anonymous"></script>
</head>

<!--Original layout, navbar selection, and footer by Holly. Logo by Eric. Team efforts in styling, with huge work done by Ronnie and Holly-->


<!--Added flex classes to body for easy layout-->
<body class="d-flex flex-column align-content-center justify-content-between">
    <header style="display:block">

        <!--Logo Stuff [Eric]-->
        <div class="logoAddonWrap">
            <!--Logo made by Eric, animated using Vivus at https://maxwellito.github.io/vivus-instant/-->
            <img src="~/Images/compass_animated.svg" class="logoImage" />
        </div>
        <div class="logoAddonWrap">
            <!--Free cloud svg from https://www.svgrepo.com/svg/46719/cloud, modified by Eric-->
            <img src="~/Images/cloud-svgrepo-com.svg" class="logoAddon1" />
        </div>
        <div class="logoAddonWrap">
            <img src="~/Images/cloud-svgrepo-com - Copy.png" class="logoAddon2" />
        </div>
        <div class="logoAddonWrap">
            <span class="text-center headerTitle" style="left:-61%">Travel</span>
            <span class="text-center headerTitle" style="left:-32%">Experts</span>
        </div>


            @* Icon for Navigation *@
            <input id="page-nav-toggle" class="main-navigation-toggle" type="checkbox" />
            <label for="page-nav-toggle">
                <svg class="icon--menu-toggle" viewBox="0 0 60 30">
                    <g class="icon-group">
                        <g class="icon--menu">
                            <path d="M 6 0 L 54 0" />
                            <path d="M 6 15 L 54 15" />
                            <path d="M 6 30 L 54 30" />
                        </g>
                        <g class="icon--close">
                            <path d="M 15 0 L 45 30" />
                            <path d="M 15 30 L 45 0" />
                        </g>
                    </g>
                </svg>
            </label>

            <nav class="main-navigation">
                <ul>
                    <li><a class="font-italic" asp-area="" asp-controller="Home" asp-action="Index"><partial name="~/Views/Shared/GreetUser.cshtml" /></a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Travel Experts</a></li>
                    @*If the user is logged in, display the Logout option, otherwise display Login [Auth conditional styling by Eric]*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a asp-area="" asp-controller="Customer" asp-action="Manage">My Account</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Customer" asp-action="Record">View Bookings</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Package">Current Packages</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a asp-area="" asp-controller="Customer" asp-action="Index">Register</a></li>
                    }
                </ul>
            </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--Footer design by Holly, with collapsing added by Eric-->
    <footer class="border-top footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <a data-toggle="collapse" href="#footerCollapse" role="button" aria-expanded="false" aria-controls="footerCollapse" class="text-light">
                        Calgary Office
                    </a><br />

                </div>
                <div class="col-md-4 text-center">
                    <a data-toggle="collapse" href="#footerCollapse" role="button" aria-expanded="false" aria-controls="footerCollapse" class="text-light">
                        Okotoks Office
                    </a><br />
                </div>
                <div class="col-md-4 text-center">
                    <a data-toggle="collapse" href="#footerCollapse" role="button" aria-expanded="false" aria-controls="footerCollapse" class="text-light">
                        Quick Links
                    </a>
                </div>
            </div>
            <div class="row collapse" id="footerCollapse">
                <div class="col-md-4 text-center">
                    <address>
                        1155 8th Ave SW,<br />
                        Calgary, AB, T2P1N3<br />
                        Phone (403) 271-9873<br />
                        Fax (403) 271-9872
                    </address>
                </div>
                <div class="col-md-4 text-center">
                    <address>
                        110 Main Street,<br />
                        Okotoks, AB, T7R3J5<br />
                        Phone (403) 563-2381<br />
                        Fax (403) 563-2382
                    </address>
                </div>
                <div class="col-md-4 text-center" id="links">
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        @*If the user is logged in, display the Logout option, otherwise display Login*@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a asp-area="" asp-controller="Customer" asp-action="Manage">My Account</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="Customer" asp-action="Record">View Bookings</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                            <li><a asp-area="" asp-controller="Customer" asp-action="Index">Register</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Package">Current Packages</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div id="row footer" class="col-12 text-center pb-1">
                &copy; 2021 - BLEK Development
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


